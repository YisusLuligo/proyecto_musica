                <PasswordField fx:id="pfPassword"/>
                <Button text="Guardar" onAction="#onGuardar" styleClass="btn-primary"/>
            </HBox>
            <Label text="Favoritos" styleClass="subtitle"/>
            <HBox spacing="8">
                <ComboBox fx:id="cbCanciones"/>
