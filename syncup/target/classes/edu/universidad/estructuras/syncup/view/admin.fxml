<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javax.swing.table.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?xml version="1.0" encoding="UTF-8"?>



<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.universidad.estructuras.syncup.controller.AdminController"
            prefWidth="1200" prefHeight="700">

    <left>
        <VBox spacing="12" styleClass="sidebar">
            <Button text="Volver al Inicio" onAction="#volverInicio" styleClass="sidebar-btn"/>
            <Button text="Panel Admin" disable="true" styleClass="sidebar-btn"/>
            <Button text="Biblioteca" onAction="#abrirBiblioteca" styleClass="sidebar-btn"/>
            <Label fx:id="lblCountCanciones" text="0 Canciones" styleClass="sidebar-count"/>
            <Label fx:id="lblCountUsuarios" text="0 Usuarios" styleClass="sidebar-count"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="10" styleClass="content">
            <Label text="Panel de Administración" styleClass="title"/>
            <TabPane fx:id="tabPane">
                <tabs>
                    <!-- TAB Canciones -->
                    <Tab text="Gestión de Canciones">
                        <BorderPane>
                            <top>
                                <HBox spacing="10">
                                    <Button text="+ Agregar Canción" onAction="#mostrarModalAgregarCancion" styleClass="btn-primary"/>
                                    <Button text="Cargar Archivo" onAction="#onCargarArchivo" styleClass="btn-secondary"/>
                                    <Button text="Ruta entre Canciones" onAction="#onRutaCanciones" styleClass="btn-secondary"/>
                                    <TextField fx:id="tfBuscarTitulo" promptText="Buscar por título"/>
                                    <Button text="Autocompletar" onAction="#onAutocompletar" styleClass="btn-secondary"/>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="tablaCanciones">
                                    <columns>
                                        <TableColumn fx:id="colTitulo" text="Título" prefWidth="200"/>
                                        <TableColumn fx:id="colArtista" text="Artista" prefWidth="150"/>
                                        <TableColumn fx:id="colAlbum" text="Álbum" prefWidth="150"/>
                                        <TableColumn fx:id="colGenero" text="Género" prefWidth="100"/>
                                        <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                                        <TableColumn fx:id="colDuracion" text="Duración" prefWidth="90"/>
                                        <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="120"/>
                                    </columns>
                                </TableView>

                            </center>
                        </BorderPane>
                    </Tab>

                    <!-- TAB Usuarios -->
                    <Tab text="Gestión de Usuarios">
                        <BorderPane>
                            <top>
                                <HBox spacing="10">
                                    <Button text="+ Agregar Usuario" onAction="#mostrarModalAgregarUsuario" styleClass="btn-primary"/>
                                </HBox>
                            </top>
                            <center>
                                <TableView fx:id="tablaUsuarios">
                                    <columns>
                                        <TableColumn fx:id="colUserNombre" text="Nombre" prefWidth="180"/>
                                        <TableColumn fx:id="colUserEmail" text="Email" prefWidth="200"/>
                                        <TableColumn fx:id="colUserEstado" text="Estado" prefWidth="100"/>
                                        <TableColumn fx:id="colUserRegistro" text="Registro" prefWidth="140"/>
                                        <TableColumn fx:id="colUserUltima" text="Última Actividad" prefWidth="160"/>
                                        <TableColumn fx:id="colUserPlaylists" text="Playlists" prefWidth="100"/>
                                        <TableColumn fx:id="colUserAcciones" text="Acciones" prefWidth="120"/>
                                    </columns>
                                </TableView>
                            </center>
                        </BorderPane>
                    </Tab>
                </tabs>
            </TabPane>
        </VBox>
    </center>
</BorderPane>

